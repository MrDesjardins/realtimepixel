    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "redis": "^4.1.0",
    "socket.io": "^4.5.0",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/uuid": "^8.3.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1"
